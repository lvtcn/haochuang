<!--pages/user/rzqiye/rzqiye.wxml-->
<view class="syk-table">
    <form bindsubmit='formSubmit'>
        <view class="syk-viewimg">
            <view class="image" bindtap="uploadImages" id="frsfzpic">
                <input name="frsfzpic" hidden="true" value="{{frsfzpic.valurl}}"/>
                <image src='{{frsfzpic.url != null?frsfzpic.url:"../../../images/user/wutu.png"}}'
                       mode="aspectFit"></image>
                <view class="name">法人手持身份证</view>
            </view>
            <view class="image" bindtap="uploadImages" id="zyzzpic">
                <input name="zyzzpic" hidden="true" value="{{zyzzpic.valurl}}"/>
                <image src='{{zyzzpic.url != null?zyzzpic.url:"../../../images/user/wutu.png"}}'
                       mode="aspectFit"></image>
                <view class="name">营业执照</view>
            </view>
        </view>
        <view class="syk-viewbor bottom">
            <view class="tdleft">联系人</view>
            <view class="tdright">
                <view class="name">
                    <input name='username' type='text' placeholder='请填写联系人姓名' maxlength='8'></input>
                </view>
            </view>
        </view>
        <view class="syk-viewbor">
            <view class="tdleft">手机</view>
            <view class="tdright">
                <view class="name">
                    <input name='sfzh' type='number' placeholder='请填写联系人手机号' maxlength='20'></input>
                </view>
            </view>
        </view>
        <view class="syk-viewbor">
            <view class="tdleft">固话</view>
            <view class="tdright">
                <view class="name">
                    <input name='tel' type='number' placeholder='请填写公司固话' maxlength='20'></input>
                </view>
            </view>
        </view>
        <view class="syk-viewbor">
            <view class="tdleft">邮箱</view>
            <view class="tdright">
                <view class="name">
                    <input name='email' type='text' placeholder='请填写联系人邮箱' maxlength='20'></input>
                </view>
            </view>
        </view>
        <view class="syk-viewbor">
            <view class="tdleft">联系地址</view>
            <view class="tdright">
                <view class="name">
                    <input name='addr' type='text' placeholder='请填写联系地址' maxlength='50'></input>
                </view>
            </view>
        </view>
        <view class="syk-viewbor bottom">
            <view class="tdleft">公司名称</view>
            <view class="tdright">
                <view class="name">
                    <input name='title' type='text' placeholder='请填写公司名称' maxlength='50'></input>
                </view>
            </view>
        </view>
        <view class="syk-viewbor">
            <view class="tdleft">公司简介</view>
            <view class="tdright namearea">
                <view class="name">
                    <textarea name='about' type='text' maxlength='500'></textarea>
                </view>
            </view>
        </view>
        <view class="syk-viewbor">
            <view class="tdleft">业务介绍</view>
            <view class="tdright namearea">
                <view class="name">
                    <textarea name='yewu' type='text' maxlength='500'></textarea>
                </view>
            </view>
        </view>
        <view class="syk-viewbor bottom">
            <view class="tdleft">服务标签</view>
            <view class="tdright">
                <view class="name">
                    <input name='biaoqian1' type='text' placeholder='' maxlength='4'></input>
                </view>
                <view class="name">
                    <input name='biaoqian2' type='text' placeholder='' maxlength='4'></input>
                </view>
                <view class="name">
                    <input name='biaoqian3' type='text' placeholder='' maxlength='4'></input>
                </view>
                <view class="name">
                    <input name='biaoqian4' type='text' placeholder='' maxlength='4'></input>
                </view>
            </view>
        </view>
        <button formType='submit' class='syk-submit'>提交</button>
    </form>
</view>