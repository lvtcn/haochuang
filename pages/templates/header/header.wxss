/* pages/templates/header/header.wxss */
/* 头部配置 */
.syk-header { padding:0px 5px; display: flex; justify-content: space-between; align-items: center; height:60px; box-shadow: 0px 0px 10px rgba(0,0,0, 0.3); }
.syk-header .logo {  }
.syk-header .logo image { width:200px; height:60px; }

.syk-menu  { margin-top: 5px; }
.syk-menu image { width:35px; height:35px; }

/* 头部菜单配置 */
.syk-menulisthide {
  opacity: 0;
   transition: 0.3s;
	-moz-transition: 0.3s;
	-webkit-transition: 0.3s;
	-o-transition: 0.3s;
	-ms-transition: 0.3s;
  transform:scaleY(0);
	-moz-transform:scaleY(0);
	-ms-transform:scaleY(0);
	-webkit-transform:scaleY(0);
  border-radius: 10px;
  position: absolute; z-index: 99; right:5px; top:55px; width:100px; height:auto; background-color:#fff; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1) }

.syk-menulisthide.show {
  opacity: 1;
  transition: 0.3s;
	-moz-transition: 0.3s;
	-webkit-transition: 0.3s;
	-o-transition: 0.3s;
	-ms-transition: 0.3s;
   transform:scaleY(1);
	-moz-transform:scaleY(1);
	-ms-transform:scaleY(1);
	-webkit-transform:scaleY(1);
   transform-origin: 1% 1%;
 }
.syk-menulisthide { padding:10px; }
.syk-menulisthide .li { padding:5px 10px;}
.syk-menulisthide .li i { color:#0e8dd2; vertical-align: middle; font-size: 18px; margin-right: 5px; }
.syk-menulisthide .li em { vertical-align: middle; font-size:16px; color:#666; }
.syk-menulisthide .li .navigator-hover { color:#0e8dd2; background: none; }
.syk-menulisthide .li .navigator-hover em { color:#0e8dd2; }

/* 内页顶部 */
.syk-top { background: #fff; position: fixed; z-index: 999; width:96%; top:0px; border-bottom: 1px solid #eeedf3; padding:0 2%; height:60px; display: flex; justify-content: space-between; align-items: center; }
.syk-namesear { flex: 1; padding-right: 20px; display: flex; justify-content: space-between; }
.syk-namesear .name { line-height: 35px; font-size: 20px; color:#000; font-weight: bold; }
.syk-namesear .sear { width:60%; border:1px solid #efefef; height:35px; padding:0 10px; border-radius: 5px; display: flex; justify-content: space-between; }
.syk-namesear .sear i { font-size: 20px; margin-right: 5px; line-height:35px; }
.syk-namesear .sear .inp { line-height:38px; height:35px;  font-size: 14px; width:100%; }