/* pages/order/order.wxss */
.top {
    background: #fff;
    display: flex;
    padding: 10px;
    height: 90px;
    justify-content: space-between;
}

.top .img {
    margin-right: 10px;
}

.top .img image {
    border-radius: 10px;
    width: 110px;
    height: 90px;
}

.top .con {
    flex: 1;
}

.top .con .title {
    font-size: 16px;
    color: #000;
}

.top .con .jiage {
    margin-top: 20px;
    font-size: 18px;
    color: #ef4a51;
}

.syk-deta-footer {
    display: flex;
    justify-content: space-between;
    position: fixed;
    width: 100%;
    height: 50px;
    bottom: 0px;
    left: 0px;
    background: #fff;
}

.syk-deta-footer .tdleft { width:40%; }

.syk-deta-footer .tdleft .name {
    line-height: 50px;
    padding: 0px 10px;
    font-size: 18px;
    color: #f24e33;
    font-weight: bold;
}

.syk-deta-footer .tdright {
    display: flex;
    justify-content: space-between;
    width: 60%;
}

.syk-deta-footer .tdright .button {
    width:90%;
    color: #fff;
    font-size: 12px;
    background-image: linear-gradient(120deg, #f40f04 0%, #fc4013 100%);
    border: 0.01em solid rgba(0, 0, 0, 0.01);
    text-align: center;
    margin-top: 7px;
    border-radius: 20px;
    height:35px;
    line-height:35px;
}

.syk-deta-footer .tdright .button.navigator-hover {
    background: #fe4b17;
}

.syk-deta-footer .tdright .button:after {
    border: 0;
}

.syk-deta-footer .tdright .buttonqx {
    width:50%;
    margin-right: 5%;
    margin-top: 7px;
    border-radius: 20px;
    height:35px;
    line-height: 35px;
    color: #fff;
    font-size: 12px;
    background-image: linear-gradient(120deg, #999 0%, #999 100%);
    border: 0.01em solid rgba(0, 0, 0, 0.01);
    text-align: center;
}

.syk-deta-footer .tdright .buttonqx.navigator-hover {
    background: #999;
}

.syk-deta-footer .tdright .buttonqx:after {
    border: 0;
}
