/* pages/peixun_details/peixun_details.wxss */
.top { display: flex; padding:10px; height:100px; border-bottom: 5px solid #eeedf3; justify-content: space-between; }
.top .img { margin-right: 10px; }
.top .img image { border-radius: 10px; width:120px; height:100px; }
.top .con { flex: 1; }
.top .con .title { font-size: 16px; color:#000; }
.top .con .jiage { margin-top: 10px; font-size: 18px; color:#ef4a51; }
.top .con .zhichi { margin-top: 10px; color:#fff; font-size: 12px; background: #fa6e6d; width:80px; height:25px; line-height: 25px; text-align: center; }

.list { padding:10px; }
.list .li { display: flex; border-bottom: 0.01em solid #ededef; height:50px; line-height: 50px; justify-content: space-between; font-size: 14px; }
.list .li .dd1 { display: flex; color:#6d6d6d; width:150px; }
.list .li .dd1 i { font-size: 16px; color:#a5a5a5; }
.list .li .dd1 .name { margin-left: 10px; }
.list .li .dd2 { text-align: right; display: flex; color:#000; }
.list .li .dd2.yiyou { color:#989898 }
.list .li .dd2.yiyou i { color:#989898; font-size: 14px; margin-left: 5px; }